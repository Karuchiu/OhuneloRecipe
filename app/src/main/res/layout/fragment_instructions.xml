<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.fragment.recipe_details.InstructionsFragment">

        <TextView
            android:id="@+id/instructions_text"
            style="@style/HeaderTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/instructions"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sp"
            style="@style/SubTextStyle"
            tools:text="6 Items"
            app:layout_constraintTop_toBottomOf="@+id/instructions_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_4dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/instructions_recycler"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_0dp"
            tools:listitem="@layout/instructions_item_layout"
            app:layout_constraintTop_toBottomOf="@+id/item_count"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/no_instructions_text"
            style="@style/HeaderTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_instructions"
            android:textSize="@dimen/_16sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_count" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>