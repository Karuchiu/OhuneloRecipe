<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Chip Style-->
    <style name="Widget.Ohunelo.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/chip_text_color_state</item>
        <item name="chipBackgroundColor">@color/chip_bg_color_state</item>
    </style>

    <!-- Steps Material Card View Style-->
    <style name="Widget.App.StepsMaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.Ohunelo.StepsMaterialCardView</item>
    </style>

    <!-- Material Card View Style -->
    <style name="Widget.Ohunelo.MaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Ohunelo.AllViews</item>
    </style>

    <!-- Bottom Sheet Style-->
    <style name="Widget.Ohunelo.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Ohunelo.AllViews</item>
        <item name="background">?attr/colorSurface</item>
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
    </style>

</resources>