<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Cubic Image Style-->
    <style name="cubicImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_20dp</item>
    </style>

    <!-- Circular Image View Style-->
    <style name="ShapeAppearanceOverlay.Ohunelo.ImageView.Circular" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Shapeble Image View Cubic Style-->
    <style name="ShapeAppearanceOverlay.Ohunelo.ImageView.Cubic" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20%</item>
    </style>

    <!-- Steps Material Card View Style -->
    <style name="ShapeAppearanceOverlay.Ohunelo.StepsMaterialCardView" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerSizeTopLeft">@dimen/_0dp</item>
    </style>

    <!-- Profile Options Card View Style -->
    <style name="ShapeAppearanceOverlay.Ohunelo.ProfileOptionsCardView" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamilyBottomLeft">cut</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerSizeBottomLeft">@dimen/_0dp</item>
    </style>

    <!-- All Views Style-->
    <style name="ShapeAppearanceOverlay.Ohunelo.AllViews" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_20dp</item>
    </style>

</resources>